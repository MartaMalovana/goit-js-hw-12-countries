<li>
    <h1 style="text-align: center;">{{name}}</h1>
    <div style="display: flex;">
        <ul style="margin: 0 50px 50px 0; list-style: none;">
          <li><h4>Capital: {{capital}}</h4></li>
          <li><h4>Population: {{population}}</h4></li>
          <li><h4>Languages:</h4> 
              {{#each languages}}
              <li style="margin: 0 0 0 30px;">{{name}}</li>
              {{/each}}
          </li>
        </ul>
        <div>
             <img src={{flags.svg}} alt={{name}} width="200px" height="150px">
        </div>
    </div>
</li>